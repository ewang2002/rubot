        "target": "ESNext",
        "module": "CommonJS",
        "sourceMap": false,
        "outDir": "./out",
        "rootDir": "./src",
        "strict": true,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["archive/"]
}
